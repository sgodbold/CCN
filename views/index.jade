  // Login Modal
  #contactModal.modal.fade(aria-hidden='true', aria-labelledby='contactModal', role='dialog', tabindex='-1')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
