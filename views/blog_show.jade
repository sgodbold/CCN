        h2 Comments

        .fluid-container(style='padding-left: 15px; padding-right: 15px;')
          ul(style='list-style: none;')
            for comment in comments
              p #{comment.date}
              P #{comment.body}

        
        div
          form(method="post", action="/blog/addComment")
            input(type="hidden",name="id", value=post.title)
            div
              span Author:
              input(type="text", name="person", id="person")
            div
              span Comment:
              textarea(name="comment", rows=5, id="comment")
            div#edtiArticleSubmit
              input(type="submit", value="Send")


